<body>
    <header>
        <h1><b id="logo-abc">ABC</b> Bank</h1>
        <nav>
            <a href="/">Search customer</a>
            <a href="/createcustomer">Create Customer</a>
            <a href="/updatecustomer">Update Customer</a>
            <a href="#">Delete customer</a>
        </nav>
    </header>

    <fieldset>
        <legend>Delete customer</legend>
        <form action="/deletecustomer" method="POST">
            <label for="personal_number">Personal Number:</label>
            <input type="text" id="personal_number" name="personal_number"
                placeholder="Enter the personal number of the customer to delete" pattern="^\d{11}$"
                title="Personal Number must consists of 11 digits." required>
            <input id="delete" type="submit" value="Delete customer">
        </form>
    </fieldset>

     <!-- We use ejs here to insert the response from the server on the HTL page -->
    <div class="results">
        <% if (locals.response) { %>
            <%= response %>
                <% } %>
    </div>


</body>

</html>